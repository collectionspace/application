<record id="conditioncheck" in-findedit="yes" type="record,procedure">
    <services-url>conditionchecks</services-url>
    <services-tenant-plural>Conditionchecks</services-tenant-plural>
    <services-tenant-singular>Conditioncheck</services-tenant-singular>
    <services-list-path>abstract-common-list/list-item</services-list-path>
    <services-record-path>conditionchecks_common:http://collectionspace.org/services/conditioncheck,conditionchecks_common</services-record-path>
    <services-record-path id="collectionspace_core">collectionspace_core:http://collectionspace.org/collectionspace_core/,collectionspace_core</services-record-path>
    <hassoftdelete>true</hassoftdelete>
    <structures>
        <structure id="screen">
            <view>
                <label-section id="messagekeys" show="true"></label-section>
            </view>
        </structure>
        <structure id="search">
            <view>
                <label-section id="messagekeys" show="true"></label-section>
            </view>
        </structure>
        <structure id="tab">
            <view>
                <titlebar show="false"></titlebar>
                <sidebar show="false"></sidebar>
                <edit-section id="details" show="true"></edit-section>
                <list-section id="list" show="false"></list-section>
                <label-section id="messagekeys" show="true"></label-section>
            </view>
            <repeat id="list" asSibling="true">
                <selector>recordList-row:</selector>
                <field id="summary" ui-type="list">
                    <selector>related-summary</selector>
                </field>
                <field id="number" ui-type="list">
                    <selector>related-number</selector>
                </field>
            </repeat>
        </structure>
    </structures>
    
    <include src="domain-procedure-conditioncheck.xml" strip-root="yes"/>

    <row-selector>.csc-recordList-row:</row-selector>
    <section id="coreInformation">
        <field id="tenantID" section="collectionspace_core" attributes="GET"></field>
        <field id="createdBy" ui-search="repeatable" section="collectionspace_core" attributes="GET"></field>
        <field id="updatedBy" ui-search="repeatable" section="collectionspace_core" attributes="GET"></field>
        <field id="createdAt" section="collectionspace_core" attributes="GET"></field>
        <field id="updatedAt" ui-search="range" ui-type="date" section="collectionspace_core" attributes="GET" mini="search,list,relate"></field>
    </section>
    <section id="objectConditionInformation">
        <repeat id="objectAuditCategories">
            <field id="objectAuditCategory" ui-search="repeatable" seperate_ui_container="true">
                <selector>conditioncheck-objectAuditCategory</selector>
                <options>
                    <option id="first" default="yes">First</option>
                    <option id="second">Second</option>
                    <option id="third">Third</option>
                    <option id="fourth">Fourth</option>
                    <option id="fifth">Fifth</option>
                </options>
            </field>
        </repeat>
        <repeat id="completenessGroupList/completenessGroup">
            <!--field id="completeness" ui-search="repeatable" autocomplete="vocab-lostatus" ui-type="enum"></field-->
            <field id="completeness" ui-search="repeatable" seperate_ui_container="true">
                <selector>conditioncheck-completeness</selector>
                <options>
                    <option id="first" default="yes">First</option>
                    <option id="second">Second</option>
                    <option id="third">Third</option>
                    <option id="fourth">Fourth</option>
                    <option id="fifth">Fifth</option>
                </options>
            </field>
            <field id="completenessDate" ui-type="date"></field>
            <field id="completenessNote"></field>
        </repeat>
        <repeat id="conditionCheckGroupList/conditionCheckGroup">
            <field id="condition" ui-search="repeatable" seperate_ui_container="true">
                <selector>conditioncheck-condition</selector>
                <options>
                    <option id="first" default="yes">First</option>
                    <option id="second">Second</option>
                    <option id="third">Third</option>
                    <option id="fourth">Fourth</option>
                    <option id="fifth">Fifth</option>
                </options>
            </field>
            <field id="conditionDate" ui-type="date"></field>
            <field id="conditionNote"></field>
        </repeat>
        <field id="conservationTreatmentPriority"></field>
        <repeat id="envConditionNoteGroupList/envConditionNoteGroup">
            <field id="envConditionNote"></field>
            <field id="envConditionNoteDate" ui-type="date"></field>
        </repeat>
        <field id="nextConditionCheckDate" ui-type="date"></field>
        <repeat id="techAssessmentGroupList/techAssessmentGroup">
            <field id="techAssessment"></field>
            <field id="techAssessmentDate" ui-type="date"></field>
        </repeat>
        <repeat id="hazardGroupList/hazardGroup">
            <field id="hazard" ui-search="repeatable" seperate_ui_container="true">
                <selector>conditioncheck-hazard</selector>
                <options>
                    <option id="first" default="yes">First</option>
                    <option id="second">Second</option>
                    <option id="third">Third</option>
                    <option id="fourth">Fourth</option>
                    <option id="fifth">Fifth</option>
                </options>
            </field>
            <field id="hazardDate" ui-type="date"></field>
            <field id="hazardNote"></field>
        </repeat>
    </section>
    <section id="conditionCheckInformation">
        <field id="conditionCheckDate" ui-type="date" mini="summary,search,list,relate" in-title="yes" ui-search="repeatable"></field>
        <repeat id="conditionCheckMethods">
            <field id="conditionCheckMethod" ui-search="repeatable" seperate_ui_container="true">
                <selector>conditioncheck-conditionCheckMethod</selector>
                <options>
                    <option id="first" default="yes">First</option>
                    <option id="second">Second</option>
                    <option id="third">Third</option>
                    <option id="fourth">Fourth</option>
                    <option id="fifth">Fifth</option>
                </options>
            </field>
        </repeat>
        <field id="conditionCheckNote"></field>
        <repeat id="conditionCheckReasons">
            <field id="conditionCheckReason" ui-search="repeatable" seperate_ui_container="true">
                <selector>conditioncheck-conditionCheckReason</selector>
                <options>
                    <option id="first" default="yes">First</option>
                    <option id="second">Second</option>
                    <option id="third">Third</option>
                    <option id="fourth">Fourth</option>
                    <option id="fifth">Fifth</option>
                </options>
            </field>
        </repeat>
        <field id="conditionCheckRefNumber" ui-search="repeatable" in-title="yes" chooser="yes" mini="number,search,list,relate" seperate_ui_container="true">
            <selector>conditioncheck-numberPatternChooser-reference-number</selector>
            <title-selector>titleBar-conditioncheck-reference-number</title-selector>
            <container-selector>conditioncheck-reference-number-patternChooserContainer</container-selector>
            <options>
                <option id="accession" sample="2009.1">Accession</option>
                <option id="archive" sample="AR2009.42">Archives</option>
                <option id="library" sample="LIB2009.1">Library</option>
            </options>
        </field>
        <repeat id="conditionCheckers">
            <field id="conditionChecker" ui-search="repeatable" autocomplete="person-person,organization-organization"></field>
        </repeat>
    </section>
    <section id="objectRequirementInformation">
        <field id="displayRecommendations"></field>
        <field id="envRecommendations"></field>
        <field id="handlingRecommendations"></field>
        <field id="packingRecommendations"></field>
        <field id="securityRecommendations"></field>
        <field id="specialRecommendations"></field>
        <field id="storageRequirements"></field>
        <field id="salvagePriorityCode">
            <selector>conditioncheck-salvagePriorityCode</selector>
            <options>
                <option id="first" default="yes">First</option>
                <option id="second">Second</option>
                <option id="third">Third</option>
                <option id="fourth">Fourth</option>
                <option id="fifth">Fifth</option>
            </options>
        </field>
        <field id="salvagePriorityCodeNote"></field>
        <field id="salvagePriorityCodeDate"></field>
        <field id="legalRequirements"></field>
        <repeat id="legalReqsHeldGroupList/legalReqsHeldGroup">
            <field id="legalReqsHeld"></field>
            <field id="legalReqsHeldBeginDate" ui-type="date"></field>
            <field id="legalReqsHeldEndDate" ui-type="date"></field>
            <field id="legalReqsHeldNumber" datatype="number"></field>
            <field id="legalReqsHeldRenewDate" ui-type="date"></field>
        </repeat>
    </section>
</record>