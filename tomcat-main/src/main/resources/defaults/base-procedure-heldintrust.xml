<record id="heldintrust" in-findedit="yes" type="record,procedure" cms-type="default" generate-services-schema="true">
  <services-url>heldintrusts</services-url>
  <services-tenant-singular>Heldintrust</services-tenant-singular>
  <services-tenant-plural>Heldintrusts</services-tenant-plural>

  <services-list-path>abstract-common-list/list-item</services-list-path>
  <services-record-path>heldintrusts_common:http://collectionspace.org/services/heldintrust,heldintrusts_common</services-record-path>
  <services-record-path id="collectionspace_core">collectionspace_core:http://collectionspace.org/collectionspace_core/,collectionspace_core</services-record-path>

  <include src="domain-procedure-heldintrust.xml" strip-root="yes" />

  <section id="coreInformation">
    <include src="core-fields.xml" strip-root="yes" />
  </section>

  <section id="heldintrustInformation">
    <field id="heldInTrustNumber" mini="number,list" />
    <field id="entryDate" datatype="date" />

    <repeat id="heldInTrustDepositorGroupList/heldInTrustDepositorGroup">
      <field id="depositor" mini="summary,list" autocomplete="true" />
      <field id="depositorContact" autocomplete="true" />
      <field id="depositorContactType" autocomplete="true" ui-type="enum" />
      <field id="depositorNote" />
    </repeat>

    <repeat id="agreementGroupList/agreementGroup">
      <field id="agreementStatus" autocomplete="true" ui-type="enum" />
      <field id="agreementStatusDate" datatype="date" />
      <field id="agreementStatusNote" />
    </repeat>

    <repeat id="entryMethods">
      <field id="entryMethod" autocomplete="true" ui-type="enum" />
    </repeat>

    <repeat id="agreementRenewalDates">
      <field id="agreementRenewalDate" datatype="date" />
    </repeat>

    <field id="entryReason" autocomplete="true" ui-type="enum" />
    <field id="returnDate" datatype="date" />
    <field id="entryNote" />

    <repeat id="internalApprovalGroupList/internalApprovalGroup">
      <field id="internalApprovalGroupName" autocomplete="true" ui-type="enum" />
      <field id="internalApprovalIndividual" autocomplete="true" />
      <field id="internalApprovalStatus" autocomplete="true" ui-type="enum" />
      <field id="internalApprovalDate" datatype="date" />
      <field id="internalApprovalNote" />
    </repeat>

    <repeat id="externalApprovalGroupList/externalApprovalGroup">
      <field id="externalApprovalGroupName" autocomplete="true" ui-type="enum" />
      <field id="externalApprovalIndividual" autocomplete="true" />
      <field id="externalApprovalStatus" autocomplete="true" ui-type="enum" />
      <field id="externalApprovalDate" datatype="date" />
      <field id="externalApprovalNote" />
    </repeat>
  </section>

  <section id="cultureCareAndHandling">
    <field id="handlingPreferences" />
    <repeat id="handlingLimitationsGroupList/handlingLimitationsGroup">
      <field id="handlingLimitationsType" autocomplete="true" ui-type="enum" />
      <field id="handlingLimitationsLevel" autocomplete="true" ui-type="enum" />
      <field id="handlingLimitationsDetail" />
      <field id="handlingLimitationsRequestor" autocomplete="true" />
      <field id="handlingLimitationsOnBehalfOf" autocomplete="true" />
      <field id="handlingLimitationsDate" datatype="date" />
    </repeat>
  </section>

  <section id="correspondence">
    <repeat id="correspondenceGroupList/correspondenceGroup">
      <field id="correspondenceDate" datatype="date" />
      <field id="correspondenceSender" autocomplete="true" />
      <field id="correspondenceRecipient" autocomplete="true" />
      <field id="correspondenceSummary" />
      <field id="correspondenceReference" />
    </repeat>
  </section>

</record>