<record id="preferredWork" in-recordlist="no" separate-record="false">
    <hassoftdelete>true</hassoftdelete>
    <section id="termInformation">
        <!-- List containing this item's preferred term and any non-preferred terms -->
        <repeat id="workTermGroupList/workTermGroup">
            <!-- Fields common across all authority items -->
            <field id="termDisplayName" ui-search="repeatable" in-title="yes" display-name="yes"
                mini="summary,number,search,list,relate">
                <selector>workAuthority-termDisplayName</selector>
                <title-selector>titleBar-displayName</title-selector>
            </field>
            <field id="termName" ui-search="repeatable">
                <selector>workAuthority-termName</selector>
            </field>
            <field id="termType">
                <selector>workAuthority-termType</selector>
            </field>
            <field id="termStatus" ui-search="repeatable" seperate_ui_container="true"
                mini="search,list,relate">
                <selector>workAuthority-termStatus</selector>
                <options>
                    <option id="" default="yes">Please select a value</option>
                    <option id="quickaddedneedsattention">Quick Added, needs attention</option>
                    <option id="inprogress">In Progress</option>
                    <option id="complete">Complete</option>
                </options>
            </field>
            <field id="termQualifier">
                <selector>workAuthority-termQualifier</selector>
            </field>
            <field id="termLanguage" ui-search="repeatable" autocomplete="vocab-languages" ui-type="enum" seperate_ui_container="true">
                <selector>workAuthority-termLanguage</selector>
            </field>
            <field id="termPrefForLang" datatype="boolean">
                <selector>workAuthority-termPrefForLang</selector>
            </field>
            <field id="termSource">
                <selector>workAuthority-termSource</selector>
            </field>
            <field id="termSourceDetail">
                <selector>workAuthority-termSourceDetail</selector>
            </field>
            <field id="termSourceID">
                <selector>workAuthority-termSourceID</selector>
            </field>
            <field id="termSourceNote">
                <selector>workAuthority-termSourceNote</selector>
            </field>
        </repeat>
    </section>
</record>
