
            <!-- XXX uispec Urls have been edited/fixed to match those been generated by this xml for the time being -->
            <record id="citation" type="authority">
                <terms-used>false</terms-used>
                <!-- XXX servcie layer doesn't currently support citation terms but it does on  organisations - go figure -->
                <web-url>citation</web-url>
                <services-tenant-auth-singular>Citationauthority</services-tenant-auth-singular>
                <services-tenant-auth-plural>Citationauthorities</services-tenant-auth-plural>
                <services-tenant-singular>Citation</services-tenant-singular>
                <services-instances-path>citationauthorities_common:http://collectionspace.org/services/citation,abstract-common-list/list-item</services-instances-path>
                <services-single-instance-path>citationauthorities_common:http://collectionspace.org/services/citation,citationauthorities_common</services-single-instance-path>
                <services-list-path>http://collectionspace.org/services/citation,abstract-common-list/list-item</services-list-path>
                <services-record-path>citations_common:http://collectionspace.org/services/citation,citations_common</services-record-path>
                <services-record-path id="collectionspace_core">collectionspace_core:http://collectionspace.org/collectionspace_core/,collectionspace_core</services-record-path>
                <services-url>citationauthorities</services-url>
                <authority-vocab-type>CitationAuthority</authority-vocab-type>
                <hassoftdelete>true</hassoftdelete>
                <structures>
                    <structure id="search">
                        <view>
                            <label-section id="messagekeys" show="true"></label-section>
                        </view>
                    </structure>
                    <structure id="screen">
                        <view>
                            <label-section id="messagekeys" show="true"></label-section>
                            <hierarchy-section show="true">
                        		<options>
                            		<option id="narrowerContext">citation-citation</option>
                            		<option id="broaderContext">citation-citation</option>
								</options>
							</hierarchy-section>
                        </view>
                    </structure>
                </structures>
				
				<include src="domain-authority-citation.xml"  strip-root="yes" />
				
				<instances id="citation">
                    <instance id="citation-citation">
                        <web-url>citation</web-url>
                        <title-ref>citation</title-ref>
                        <title>Default Citations</title>
                    </instance>
                </instances>               
                <section id="coreInformation">
                    <field id="tenantID" section="collectionspace_core" attributes="GET"></field>
			        <field id="createdBy" section="collectionspace_core" attributes="GET"></field>
			        <field id="updatedBy" ui-search="repeatable" section="collectionspace_core" attributes="GET"></field>
                    <field id="createdAt" section="collectionspace_core" attributes="GET"></field>
                    <field id="updatedAt" ui-search="range" ui-type="date" section="collectionspace_core" attributes="GET" mini="search,list,relate"></field>
                </section>
                <section id="citationNameAuthorityInformation">
                    <field id="preferredCitation" ui-type="groupfield/preferredCI/selfrenderer" ui-func="cspace.preferred">
                        <selector>preferred-citationAuthority</selector>
                    </field>
                    
                   <repeat id="citationPublicationInfoGroupList/citationPublicationInfoGroup" >          
			           
			          <field id="publisher" ui-search="repeatable" autocomplete="organization-organization">
			              <selector>citationAuthority-publication-publisher</selector>
			          </field>
			          <field id="place" ui-search="repeatable" autocomplete="location-location, location-offsite_sla">
			              <selector>citationAuthority-publication-place</selector>
			          </field>
			      		<group id="publicationDate" ui-type="groupfield/structureddate" primarykey="dateDisplayDate" ui-func="cspace.structuredDate" >
			      			<selector>citationAuthority-publication-publicationDate</selector>
			      		</group>
			        <field id="edition" ui-search="repeatable">
			              <selector>citationAuthority-publication-edition</selector>
			          </field>
			          <field id="pages">
			              <selector>citationAuthority-publication-pages</selector>
			          </field>			           
			      </repeat> 
			      
			      <repeat id="citationAgentInfoGroupList/citationAgentInfoGroup" >          
			           
			           <field id="agent" ui-search="repeatable" autocomplete="person-person, person-ulan_pa, organization-organization">
			               <selector>citationAuthority-agentInfo-agent</selector>
			           </field>                     
			           <field id="role" autocomplete="vocab-agentinfo" ui-type="enum">
			                <selector>citationAuthority-agentInfo-role</selector>
			            </field>          		
			           <field id="note">
			               <selector>citationAuthority-agentInfo-note</selector>
			           </field>			           
			       </repeat>
				
					
					 <repeat id="citationResourceIdentGroupList/citationResourceIdentGroup" >          
						<field id="resourceIdent">
			               <selector>citationAuthority-resourceId-id</selector>
			           </field>		                               
			           <field id="type" autocomplete="vocab-resourceid" ui-type="enum">			             
			                <selector>citationAuthority-resourceId-type</selector>
			            </field>  
			            <group id="captureDate" ui-search="range" ui-type="groupfield/structureddate" primarykey="dateDisplayDate" ui-func="cspace.structuredDate" >
			            	<selector>citationAuthority-resourceId-captureDate</selector>
			            </group>        		           		           
			       </repeat>
			       
			       
			       <repeat id="citationRelatedTermsGroupList/citationRelatedTermsGroup" >          
						           
			           <field id="relatedTerm" ui-search="repeatable" autocomplete="concept-concept,concept-material_ca,concept-activity">
			               <selector>citationAuthority-relatedTerms-relatedTerm</selector>
			           </field>                     
			           <field id="relationType" autocomplete="vocab-relationtype" ui-type="enum">
			                <selector>citationAuthority-relatedTerms-relationType</selector>
			            </field>          		          		           
			       </repeat>           
			       
			       <field id="citationsNotes">
		               <selector>citationAuthority-citation-notes</selector>
		           </field>	
			        
                </section>
                
                
                <!-- not used in UI except in autocompletes -->
                <section id="otherInformation">
                    <field id="shortIdentifier" mini="search,list,relate" attributes="GET"></field>
                    <field id="csid" mini="search,list,relate" attributes="GET"></field>
                    <field id="refName" mini="search,list,relate" attributes="GET"></field>
                    <field id="uri" mini="search,list,relate" attributes="GET"></field>
                </section>
                
                <!--  labels -->
				<section id="labelPublicationInformation-group"/>
				<section id="labelPublicationInformation-publisher"/>
				<section id="labelPublicationInformation-place"/>
				<section id="labelPublicationInformation-date"/>
				<section id="labelPublicationInformation-edition"/>
				<section id="labelPublicationInformation-pages"/>
				
				<section id="labelAgentInformation-group"/>
				<section id="labelAgentInformation-agent"/>
				<section id="labelAgentInformation-role"/>
				<section id="labelAgentInformation-note"/>
				
				<section id="labelCitationNotes"/>
				
				<section id="labelResourceIdentifiers-group"/>
				<section id="labelResourceIdentifiers-id"/>
				<section id="labelResourceIdentifiers-type"/>
				<section id="labelResourceIdentifiers-capture-date"/>
				
				<section id="labelRelatedTerms-group"/>
				<section id="labelRelatedTerms-related"/>
				<section id="labelRelatedTerms-type"/>
				
            </record>
