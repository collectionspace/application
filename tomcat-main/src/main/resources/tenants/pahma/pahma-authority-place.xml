<record id="place">
	<instances id="place">
		<instance id="place-place">
			<web-url>place</web-url>
			<title-ref>place</title-ref>
			<!-- Change title -->
			<title>PAHMA Place Authority</title>
		</instance>
	</instances>

	<section id="placeAuthorityInformation">
		<!-- Change to use a dynamic term list -->
		<field id="placeType" autocomplete="vocab-PlaceType" ui-type="enum">
			<options/>
		</field>
		
		<!-- Anthropology domain modifications -->
		
		<repeat id="placeReferenceGroupList/placeReferenceGroup" section="anthropology">
			<!-- Remove citation-worldcat from autocomplete -->
			<field id="placeReference" autocomplete="citation-citation"/>
		</repeat>
	</section>
	
	<section id="localityInformation">
		<!-- Add autocomplete -->
		<field id="vCoordSource" autocomplete="citation-citation"/>
	</section>
	
	<section id="geoReferenceInformation">
		<repeat id="placeGeoRefGroupList/placeGeoRefGroup">
			<!-- Add autocomplete -->
			<field id="geoRefSource" autocomplete="citation-citation"/>
		</repeat>
	</section>
</record>