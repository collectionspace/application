{
    "details": {
        ".csc-termlist-name": "${fields.name}",
        ".csc-termlist-termSourcePage-label": {
            "messagekey": "termlist-termSourcePageLabel"
        },
        ".csc-termlist-termStatus-label": {
            "messagekey": "termlist-termStatusLabel"
        },
        ".csc-termlist-domaindata-label": {
            "messagekey": "termlist-domaindataLabel"
        },
        ".csc-termlist-source-label": {
            "messagekey": "termlist-sourceLabel"
        },
        ".csc-termlist-termDescription-label": {
            "messagekey": "termlist-termDescriptionLabel"
        },
        ".csc-termlist-usedBy-label": {
            "messagekey": "termlist-usedByLabel"
        },
        ".csc-termlist-description-label": {
            "messagekey": "termlist-descriptionLabel"
        },
        ".csc-termlist-terms": {
            "decorators": [{
                "func": "cspace.makeRepeatable",
                "type": "fluid",
                "options": {
                    "elPath": "fields.terms",
                    "protoTree": {
                        "expander": {
                            "tree": {
                                "expander": {
                                    "repeatID": "repeat:",
                                    "tree": {
                                        ".csc-termlist-termStatus": {
                                            "default": "active",
                                            "optionnames": ["Active", "Inactive"],
                                            "optionlist": ["active", "inactive"],
                                            "selection": "${{row}.termStatus}"
                                        },
                                        ".csc-termlist-termSourcePage": "${{row}.termSourcePage}",
                                        ".csc-termlist-termName": "${{row}.termName}",
                                        ".csc-termlist-termDescription": "${{row}.termDescription}",
                                        ".csc-termlist-termSource": "${{row}.termSource}"
                                    },
                                    "type": "fluid.renderer.repeat",
                                    "pathAs": "row",
                                    "controlledBy": "fields.terms"
                                }
                            },
                            "type": "fluid.noexpand"
                        }
                    }
                }
            }]
        },
        ".csc-termlist-termSource-label": {
            "messagekey": "termlist-termSourceLabel"
        },
        ".csc-termlist-description": "${fields.description}",
        ".csc-termlist-source": "${fields.source}",
        "expander": {
            "repeatID": ".csc-termlist-usedBy:",
            "tree": {
                "decorators": {
                    "classes": "cs-termlist-usedBy",
                    "type": "addClass"
                },
                "value": "${{row}.usedBy}"
            },
            "type": "fluid.renderer.repeat",
            "pathAs": "row",
            "controlledBy": "fields.usedBys"
        },
        ".csc-termlist-termName-label": {
            "messagekey": "termlist-termNameLabel"
        },
        ".csc-termlist-usedBys-label": {
            "messagekey": "termlist-usedBysLabel"
        },
        ".csc-termlist-terms-label": {
            "messagekey": "termlist-termsLabel"
        },
        ".csc-termlist-name-label": {
            "messagekey": "termlist-nameLabel"
        }
    },
    "list": {}
}